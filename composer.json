{
    "name": "dcplibrary/entra-sso",
    "description": "Simple Entra (Azure AD) SSO package for Laravel 12",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Lashbrook",
            "email": "blashbrook@dcplibrary.org"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/support": "^12.0",
        "illuminate/http": "^12.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Dcplibrary\\EntraSSO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dcplibrary\\EntraSSO\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dcplibrary\\EntraSSO\\EntraSSOServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
